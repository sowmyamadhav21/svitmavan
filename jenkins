pipeline {
agent any


stages {
stage('Checkout') { steps {
// Check out code from Git repository
git url: 'https://github.com/sowmyamadhav21/Maven_to_Gradle.git', branch: 'master'
}
}
stage('Build') { steps {
// Run Maven build
sh 'mvn clean package'
}
}
}

post {

success {
echo 'Build and tests succeeded!'
}
failure {
echo 'Build or tests failed.'
}
}
}
